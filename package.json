{
  "name": "@pmip/core",
  "version": "1.0.0",
  "description": "Property Management Integration Platform - The universal sync platform for property management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "prepare": "husky install",
    "docker:build": "docker build -t pmip .",
    "docker:run": "docker-compose up",
    "deploy": "npm run build && npm run deploy:lambda",
    "deploy:lambda": "sam deploy --guided"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rashidazarang/property-management-integration-platform.git"
  },
  "keywords": [
    "property-management",
    "integration",
    "orchestration",
    "propertyware",
    "servicefusion",
    "yardi",
    "appfolio",
    "real-estate",
    "sync",
    "mcp",
    "workflow-automation"
  ],
  "author": {
    "name": "Rashid Azarang",
    "email": "rashid@pmip.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rashidazarang/property-management-integration-platform/issues"
  },
  "homepage": "https://pmip.io",
  "dependencies": {
    "@agent-orchestra/core": "^2.0.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.8",
    "bullmq": "^5.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "rate-limiter-flexible": "^5.0.0",
    "redis": "^4.6.0",
    "soap": "^1.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pmip": {
    "version": "1.0.0",
    "supportedPlatforms": [
      "propertyware",
      "servicefusion",
      "yardi",
      "appfolio",
      "buildium"
    ],
    "features": {
      "workflows": true,
      "deduplication": true,
      "analytics": true,
      "compliance": true,
      "ai": false
    }
  }
}